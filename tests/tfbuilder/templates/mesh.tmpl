resource "{{.Provider}}_mesh" "{{.ResourceName}}" {
  provider = "{{.Provider}}"
  {{- if .CPID }}
  cp_id = {{.CPID}}
  {{- end }}
  type = "Mesh"
  name = "{{.MeshName}}"
  {{- if .DependsOn }}
  depends_on = [{{range $i, $v := .DependsOn}}{{if $i}}, {{end}}{{$v}}{{end}}]
  {{- end }}

  {{.Spec}}
}
